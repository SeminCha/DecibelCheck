<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. 일반 이어폰 꽂았는지 여부        : "
        android:id="@+id/text1"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="141dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인식 안됨"
        android:textSize="15dp"
        android:id="@+id/earphoneTxt"
        android:layout_alignBottom="@+id/text1"
        android:layout_toEndOf="@+id/text1"
        android:layout_marginStart="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. 블루투스 이어폰 꽂았는지 여부 : "
        android:textSize="15dp"
        android:id="@+id/textView"
        android:layout_below="@+id/text1"
        android:layout_alignStart="@+id/text1"
        android:layout_marginTop="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인식 안됨"
        android:textSize="15dp"
        android:id="@+id/bluetoothTxt"
        android:layout_alignTop="@+id/textView"
        android:layout_alignStart="@+id/earphoneTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. 음악이 재생되고 있는지 여부    : "
        android:id="@+id/text3"
        android:textSize="15dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="인식 안됨"
        android:id="@+id/musicOnTxt"
        android:layout_alignTop="@+id/text3"
        android:layout_alignEnd="@+id/bluetoothTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5. 현재 돌고 있는 앱     :"
        android:id="@+id/text4"
        android:textSize="15dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인식 안됨"
        android:textSize="15dp"
        android:id="@+id/currentPlayingAppTxt"
        android:layout_alignTop="@+id/text4"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인식 안됨"
        android:id="@+id/serviceBtn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. 현재 듣고 있는 데시벨  : "
        android:textSize="15dp"
        android:id="@+id/textView2"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/text3"
        android:layout_alignStart="@+id/text3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인식 안됨"
        android:textSize="15dp"
        android:id="@+id/decibelTxt"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/serviceBtn" />
</RelativeLayout>
